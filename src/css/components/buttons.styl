.button
  width: 140px
  height: 40px
  border-radius: 40px
  border: 1px solid #fff
  color: $button_border_color
  opacity: 0.45
  cursor: pointer
  display: inline-block
  font-size: 0.8em
  font-weight: 600
  padding: 7px 15px
  text-align: center
  text-decoration: none

  &:hover
    background-color: $button_background
    opacity: 1
    background-position: center

  &__disabled
    opacity: 0.2
    cursor: default

    &:hover
      background-color: transparent
      opacity: 0.2

    &_text
      position: absolute
      top: 80px
      right: 0
      left: 0
      width: 100%
      font-family: 'SuisseIntlCond-Light'
      text-transform: uppercase
      font-size: 12px
      letter-spacing: 1.5px
      opacity: 0.2

  &__amazon
    background: transparent url(../../images/retailers/amazon-white.png) no-repeat

    &:hover
      background: $button_background url(../../images/retailers/amazon-black.png) no-repeat
      background-position: center

  &__BN
    background: transparent url(../../images/retailers/BN-white.png) no-repeat

    &:hover
      background: $button_background url(../../images/retailers/BN-black.png) no-repeat
      background-position: center

  &__google
    background: transparent url(../../images/retailers/google-white.png) no-repeat

    &:hover
      background: $button_background url(../../images/retailers/google-black.png) no-repeat
      background-position: center

  &__ibooks
    background: transparent url(../../images/retailers/ibooks-white.png) no-repeat

    &:hover
      background: $button_background url(../../images/retailers/ibooks-black.png) no-repeat
      background-position: center

  &__kobo
    background: transparent url(../../images/retailers/kobo-white-1.png) no-repeat
    
  &__amazon, &__BN, &__google, &__ibooks, &__kobo
    background-position: center
    -webkit-transition: all 0.20s ease-in
    -o-transition: all 0.20s ease-in
    -moz-transition: all 0.20s ease-in
    transition: all 0.20s ease-in

.social-button
  width: 210px
  max-height: 20px
  padding: 20px 5px
  border-radius: 60px
  border: 2px solid transparent
  color: $social-button_color
  cursor: pointer
  display: inline-block
  font-family: 'SuisseIntlCond-Regular'
  font-size: 17px
  letter-spacing: 1.27px
  text-transform: uppercase
  text-align: center
  text-decoration: none
  vertical-align: middle
  
  @media $tablet
    padding: 15px 5px

  &::after
    vertical-align: middle
    margin-top: -5px

  &__facebook
    background-color: $social-button_facebook_color
    -webkit-transition: all 0.20s ease-in
    -o-transition: all 0.20s ease-in
    -moz-transition: all 0.20s ease-in
    transition: all 0.20s ease-in

    &::after
      background: transparent url(../../images/social-icons/icon-facebook-white.png) no-repeat

    &:hover
      background-color: transparent
      border-color: $social-button_facebook_color
      color: $social-button_facebook_color

      &::after
        background: transparent url(../../images/social-icons/icon-facebook-blue.png) no-repeat
        background-position: center

  &__twitter
    background-color: $social-button_twitter_color
    -webkit-transition: all 0.20s ease-in
    -o-transition: all 0.20s ease-in
    -moz-transition: all 0.20s ease-in
    transition: all 0.20s ease-in

    &::after
      background: transparent url(../../images/social-icons/icon-twitter-white.png) no-repeat

    &:hover
      background-color: transparent
      border-color: $social-button_twitter_color
      color: $social-button_twitter_color

      &::after
        background: transparent url(../../images/social-icons/icon-twitter-blue.png) no-repeat
        background-position: center

  &__email
    background-color: $social-button_email_color
    -webkit-transition: all 0.20s ease-in
    -o-transition: all 0.20s ease-in
    -moz-transition: all 0.20s ease-in
    transition: all 0.20s ease-in

    &::after
      background: transparent url(../../images/social-icons/icon-email-white.png) no-repeat

    &:hover
      background-color: transparent
      border-color: $social-button_email_color
      color: $social-button_email_color

      &::after
        background: transparent url(../../images/social-icons/icon-email-green.png) no-repeat
        background-position: center
        
  &__facebook::after, &__twitter::after, &__email::after
    content: ""
    background-position: center
    width: 20px
    height: 20px
    display:inline-block
    -webkit-transition: all 0.20s ease-in
    -o-transition: all 0.20s ease-in
    -moz-transition: all 0.20s ease-in
    transition: all 0.20s ease-in

.update-button
  display: inline-block
  padding: 20px
  border-radius: 50px
  border: 2px solid $update-button_color
  color: $update-button_color
  cursor: pointer
  font-family: 'SuisseIntlCond-Regular'
  font-size: 17px
  letter-spacing: 1.27px
  text-transform: uppercase
  text-align: center
  text-decoration: none
  -webkit-transition: all 0.20s ease-in
  -o-transition: all 0.20s ease-in
  -moz-transition: all 0.20s ease-in
  transition: all 0.20s ease-in
  
  @media $mobile-max
    font-size: 16px
    letter-spacing: 1.1px
    
  @media $mobile
    font-size: 14px
    letter-spacing: 1px
    
  @media $mobile-sm
    font-size: 12px
    letter-spacing: 0.8px   

  &:hover
    background-color: $update-button_color
    color: $update-button_text_color

.author-social-button
  display: inline-block
  margin: 0 10px
  cursor: pointer
  color: $author-social-button_color
  text-decoration: none
  border-bottom: 1px solid transparent
  font-family: 'SuisseIntlCond-Regular'
  text-transform: uppercase
  font-size: 17px
  letter-spacing: 1.27px
  -webkit-transition: all 0.20s ease-in
  -o-transition: all 0.20s ease-in
  -moz-transition: all 0.20s ease-in
  transition: all 0.20s ease-in
  
  @media $mobile
    font-size: 14px
  
  @media $mobile-sm
    font-size: 12px

  &:hover
    border-color: $author-social-button_color